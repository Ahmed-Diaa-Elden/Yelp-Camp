                    <a class="btn btn-lg btn-secondary fw-bold bg-white" href="/campgrounds" role="button">Campgrounds</a>
                </div>
            </main>
            <footer class="footer py-3">
                <div class="container">
                    <span class="text-muted">&copy; YelpCamp 2022</span>
                </div>
            </footer>
        </div>
    </div>
    <script src="/js/bootstrap.bundle.min.js"></script>
</body>

</html>